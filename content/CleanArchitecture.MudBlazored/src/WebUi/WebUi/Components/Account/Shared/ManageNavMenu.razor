@using Microsoft.AspNetCore.Identity
@using CleanArchitecture.MudBlazored.Infrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager

<MudNavMenu>
    <MudNavLink Href="Account/Manage" Match="NavLinkMatch.All">Profile</MudNavLink>
    <MudNavLink Href="Account/Manage/Email">Email</MudNavLink>
    <MudNavLink Href="Account/Manage/ChangePassword">Password</MudNavLink>
    @if (_hasExternalLogins)
    {
        <MudNavLink Href="Account/Manage/ExternalLogins">External login</MudNavLink>
    }
    <MudNavLink Href="Account/Manage/TwoFactorAuthentication">Two-factor authentication</MudNavLink>
    <MudNavLink Href="Account/Manage/PersonalData">Personal data</MudNavLink>
</MudNavMenu>

@code {
    private bool _hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        _hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
