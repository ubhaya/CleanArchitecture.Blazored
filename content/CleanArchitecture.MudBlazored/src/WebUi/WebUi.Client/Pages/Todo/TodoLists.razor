@attribute [Authorize]
@rendermode InteractiveWebAssembly

@if (State.Initialized)
{
    <MudToolBar>
        <MudText Typo="Typo.h6" Align="Align.Start">Lists</MudText>
        <MudSpacer/>
        <MudIconButton Edge="Edge.End" Color="Color.Default"
                       Title="Add List.."
                       Icon="@Icons.Material.Filled.Add"
                       OnClick="ShowDialog"/>
    </MudToolBar>
    
    <MudList Dense="true">
        @foreach (var list in State.Model!.Lists)
        {
            <MudListItem Class="@(IsSelected(list) ? "active" : string.Empty)" OnClick="()=>SelectList(list)">
                @list.Title
            </MudListItem>
        }
    </MudList>
}

